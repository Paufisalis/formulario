  <h2>FORMUARIO</h2>
<%= form_with model: Sale.new, local: true do |form| %>
<div class="form-group col col-3">
<%= form.label :cod%>
<%= form.number_field :cod, id: :cod, class:"form-control"%>
</div>

<div class="form-group col col-3">
<%= form.label :detail%>
<%= form.text_area :detail, id: :detail, class:"form-control" %>
</div>

<div class="form-group col col-3">
<%= form.label :category%>
<%= form.text_field :category, id: :category, class:"form-control"%>
<!-- text_field se utiliza para crear una etiqueta de tipo <input type="text"> -->
</div>

<div class="form-group col col-3">
<%= form.label :value%>
<%= form.number_field :value, id: :value, class:"form-control"%>
</div>

<div class="form-group col col-3">
<%= form.label :discount%>
<%= form.number_field :discount, id: :discount, class:"form-control"%>
</div>

<div class="form-group col col-3">
<%= form.label :tax%>
<%= form.check_box :tax, id: :tax%>
</div>

<%= form.submit "Crear", class:"btn btn-info" %>
<% end %>
